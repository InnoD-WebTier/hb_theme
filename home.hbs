{{!< default}}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">

    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>

</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    <div class="row">
        <div class="carousel-container">
            <div class="carousel-arrow left"><</div>
            <div class="carousel-arrow right">></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8 post-feed">
            <div class="row">
                {{#foreach featured}}
                <article class="{{post_class}} featured">
                    <header class="post-header featured">
                        <h2 class="post-title featured"><a href="{{url}}">{{{title}}}</a></h2>
                    </header>
                    <div class="post-meta">
                        {{author}} | 
                        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MM/DD/YYYY"}}</time>
                    </div>
                    <section class="post-excerpt">
                        <p>{{excerpt words="100"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                    </section>
                </article>
                {{/foreach}}
            </div>
            <div class="row">
                {{! The tag below includes the post loop - partials/loop.hbs }}
                {{> "loop"}}
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 sidebar">
            <div class="row">
                {{> "sidebar"}}
            </div>
        </div>
    </div>

</main>
